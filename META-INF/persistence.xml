<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 version="1.0" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
 http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name = "BiblioISMIN">
    <jta-data-source>jdbc/biblio</jta-data-source>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:52939/biblio"/>
      <property name="javax.persistence.jdbc.user" value="jee"/>
      <property name="javax.persistence.jdbc.password" value="jee"/>
    </properties>
  </persistence-unit>
</persistence>
